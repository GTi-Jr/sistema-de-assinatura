@font-face {
  font-family: 'ProximaNovaAltLight';
  font-style: normal;
  font-weight: 400;
  src: url(<%= font_path 'proxima-nova-alt-light.eot' %>),
       url(<%= font_path 'proxima-nova-alt-light.woff' %>) format('woff'),
       url(<%= font_path 'proxima-nova-alt-light.ttf' %>) format('truetype'),
       url(<%= font_path 'proxima-nova-alt-light.svg' %>) format('svg');
}

@font-face {
  font-family: 'ProximaNovaBold';
  font-style: normal;
  font-weight: 400;
  src: url(<%= font_path 'proxima-nova-bold.eot' %>),
       url(<%= font_path 'proxima-nova-bold.woff' %>) format('woff'),
       url(<%= font_path 'proxima-nova-bold.ttf' %>) format('truetype'),
       url(<%= font_path 'proxima-nova-bold.svg' %>) format('svg');
}

