<!--Pricing Plans--> 
<section class="page-block" id="pricing">
  <div class="container">
    <div class="row page-header">
      <h2>Preço dos planos</h2>
      <span>Lorem ipsum dolor amet</span>
    </div>
  </div>
  
  <div class="container">
    <div class="row">
      <% @plans.each do |plan| %>
        <div class="col-xs-12 col-sm-4">
          <div class="pricing-plan">
            <div class="header">
              <h3><%= plan.name %></h3>
              <span class="price"><%= currency(plan.price) %></span>
            </div>
            <div class="body">
              <uL>
                <li><%= plan.duration %> <%= plan.class.human_attribute_name(:months, count: plan.duration.to_i) %></li>
                <li><%= currency(plan.price_per_month) %> ao mês</li>
                <li><%= plan.description %></li>
              </uL>
              <div class="buy-btn">
                <% if current_user.plan && current_user.plan = plan %>
                  <%= link_to 'Seu plano', user_profile_path, class: 'btn terciary-bg-color' %>
                <% else %>
                  <%= link_to 'Assinar', subscribe_path(plan.id), method: :patch, class: 'btn btn-primary' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!--FAQ-->
<section class="page-block faq" id="faq">
  <div class="container">
    <div class="row page-header">
      <h2>FAQ</h2>
      <span>Subtext for header</span>
    </div>
    <div class="row">
      <div class="col-lg-3 col-md-4 col-sm-4">
        <img class="img-center" src="img/faq-icon.png" alt="FAQ"/>
      </div>
      <% Faq.all.each do |faq| %>
        <div class="col-lg-8 col-md-8 col-sm-8">
          <div class="panel-group" id="accordion-faq">
            <div class="panel">
              <a class="panel-heading collapsed" data-toggle="collapse" data-parent="#accordion-faq" href="#collapse<%= faq.id %>">
                <%= faq.question %>
                <div class="indicator"><div class="icon"><span class="hr-line"></span><span class="vr-line"></span></div></div>
              </a>
              <div id="collapse<%= faq.id %>" class="panel-collapse collapse">
                <div class="panel-body">
                  <%= faq.answer %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

