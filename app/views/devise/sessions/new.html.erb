<div class="container">
  <div class="row jumbotron">
    <div class="col-xs-12 col-sm-8 ">
      <h1 class="">Entrar</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-sm-6 col-sx-12">
          <%= f.label :email %>
          <%= f.text_field :email, id: 'email', class: 'form-control' %>
        </div>
        <div class="form-group col-sm-6 col-sx-12">
          <%= f.label :password, 'Senha' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-6 col-sx-12 text-center">
          <%= f.submit 'Entrar', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="text-center">
        <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-primary btn-sm' %><br />
      </div>
    </div>  

    <div class="col-xs-12 col-sm-4">
      <h2>Não possui cadastro?</h2>
      <p>Seja um assinante e receba nossos kits!</p>
      <p><%= link_to 'Faça seu cadastro!', new_user_registration_path, class: 'btn btn-primary' %></p>
    </div>
  </div>
</div>

