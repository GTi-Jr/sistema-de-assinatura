<%= content_for :js do %>
  <script>
    $(document).ready(function() {
      toastr.options.closeButton = true;
      toastr.options.newestOnTop = false;

      <% record.errors.full_messages.each_with_index do |msg, index| %>
        setTimeout(function() {
          toastr.warning('<%= msg %>')
          }, <%= index * 800 %>);
      <% end %>
    });
  </script>
<% end %>

