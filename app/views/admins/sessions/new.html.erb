<div class="container">
  <div class="row jumbotron">
    <div class="col-xs-12 col-sm-8 col-centered">
      <h1 class="">Painel administrativo</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-sm-6 col-sx-12">
          <%= f.label :email %>
          <%= f.text_field :email, id: 'email', class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group col-sm-6 col-sx-12">
          <%= f.label :password, 'Senha' %>
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
        </div>
        <div class="form-group col-xs-12 text-center">
          <%= f.submit 'Entrar', class: 'btn btn-primary' %>
        </div>
        <div class="form-group col-xs-12 text-center">
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'btn btn-primary btn-sm' %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>

